#Assuming is oh-my-zsh is installed

PROMPT='%{$fg_bold[cyan]%}‚òÅ %{$fg_bold[green]%}%p %{$fg_bold[cyan]%}$(git_prompt_info)%{$fg_bold[blue]%} % %{$reset_color%}'
RPROMPT="%{${fg[default]}%}%B%(7~,.../,)%6~%b%{${fg[default]}%}"

alias cls='tput clear'
alias diff='diff -u'
alias s='cd ..'
alias sou="source ~/.zshrc"

alias vi=vim

export EDITOR=vim

export HISTFILE=~/.history
export HISTSIZE=1000000
export SAVEHIST=1000000
setopt HISTAPPEND
setopt HIST_FIND_NO_DUPS
setopt HIST_EXPIRE_DUPS_FIRST
setopt HIST_IGNORE_DUPS

# git related
alias g=git
# Depends on icdiff. Install it via brew install icdiff
alias gd="git icdiff"
